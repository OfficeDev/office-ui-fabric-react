{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots" : ["./typings", "./node_modules"],
    "types": [
      "chai",
      "mocha",
      "webpack-env",
      "rtl-css-js"
    ],
    "outDir": "../lib",
    "paths": {
      "@uifabric/styling": [
        "./src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd",
    "api",
    "temp"
  ]
}