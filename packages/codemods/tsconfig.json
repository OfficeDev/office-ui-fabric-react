{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es5", "dom", "es2015.promise"],
    "types": ["jest", "node", "custom-global", "webpack-env"],
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "paths": {
      "@uifabric/codemods/lib/*": ["./src/*"],
      "@uifabric/codemods": ["./src"]
    }
  },
  "include": ["src"]
}
