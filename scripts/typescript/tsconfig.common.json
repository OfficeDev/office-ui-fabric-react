{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../",
    "paths": {
      "@fluentui/docs": ["packages/fluentui/docs"],
      "@fluentui/e2e": ["packages/fluentui/e2e"],
      "@uifabric/build": ["scripts"],
      "@fluentui/perf": ["packages/fluentui/perf"],
      "@fluentui/*": ["packages/*/src"]
    },
    "types": ["node", "jest"],
    "jsx": "react",
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true
  }
}
