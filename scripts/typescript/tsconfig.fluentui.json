{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../../",
    "paths": {
      "@uifabric/build": ["scripts"],
      "@fluentui/*": ["packages/fluentui/*/src"],
      "@fluentui/react-compose": ["packages/react-compose/src/index"],
      "@fluentui/react-docgen": ["packages/react-docgen/src/index"]
    },
    "types": ["node", "jest"],
    "jsx": "react",
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true
  }
}
