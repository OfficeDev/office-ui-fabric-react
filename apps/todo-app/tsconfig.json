{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es5", "dom", "es2015.promise"],
    "types": ["jest"]
  },
  "include": ["src"]
}
